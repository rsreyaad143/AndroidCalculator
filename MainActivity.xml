<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bgColor"
    android:padding="10dp">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="789456"
        android:padding="20dp"
        android:textColor="@color/numberColor"
        android:gravity="end"
        android:textSize="80sp"
        android:fontFamily="@font/digital_7"
        />
    
    <LinearLayout
        android:layout_below="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/Silver">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/c"
            style="@style/buttonStyle"
            android:text="C"
            />
        <Button
            android:id="@+id/m_plus"
            style="@style/buttonStyle"
            android:text="M+"
            />
        <Button
            android:id="@+id/m"
            style="@style/buttonStyle"
            android:text="M"
            />
        <Button
            android:id="@+id/del"
            style="@style/actionButtonStyle"
            android:text="DEL"
            />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/seven"
                style="@style/buttonStyle"
                android:text="7"
                />
            <Button
                android:id="@+id/eight"
                style="@style/buttonStyle"
                android:text="8"
                />
            <Button
                android:id="@+id/nine"
                style="@style/buttonStyle"
                android:text="9"
                />
            <Button
                android:id="@+id/division"
                style="@style/actionButtonStyle"
                android:text="/"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/four"
                style="@style/buttonStyle"
                android:text="4"
                />
            <Button
                android:id="@+id/five"
                style="@style/buttonStyle"
                android:text="5"
                />
            <Button
                android:id="@+id/six"
                style="@style/buttonStyle"
                android:text="6"
                />
            <Button
                android:id="@+id/multiplication"
                style="@style/actionButtonStyle"
                android:text="x"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/one"
                style="@style/buttonStyle"
                android:text="1"
                />
            <Button
                android:id="@+id/two"
                style="@style/buttonStyle"
                android:text="2"
                />
            <Button
                android:id="@+id/three"
                style="@style/buttonStyle"
                android:text="3"
                />
            <Button
                android:id="@+id/minus"
                style="@style/actionButtonStyle"
                android:text="-"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/zero"
                style="@style/buttonStyle"
                android:text="0"
                />
            <Button
                android:id="@+id/dot"
                style="@style/buttonStyle"
                android:text="."
                />
            <Button
                android:id="@+id/equal"
                style="@style/buttonStyle"
                android:text="="
                />
            <Button
                android:id="@+id/plus"
                style="@style/actionButtonStyle"
                android:text="+"
                />


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
